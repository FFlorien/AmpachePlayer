<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/toolbarItem</item>
        <item name="android:textColorSecondary">@color/toolbarItem</item>
        <item name="actionMenuTextColor">@color/toolbarItem</item>
        <item name="actionModeBackground">@color/primary</item>
    </style>

</resources>
