<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="song"
            type="be.florien.anyflow.persistence.local.model.SongDisplay" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/listItemPadding">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            app:coverImageUrl="@{song.art}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cover_placeholder" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallDimen"
            android:text="@{song.title}"
            app:layout_constraintLeft_toRightOf="@+id/cover"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This song's title" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallDimen"
            android:text="@{song.artistName}"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cover"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="This artist's name" />

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallDimen"
            android:text="@{song.albumName}"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@+id/cover"
            app:layout_constraintTop_toBottomOf="@+id/artist"
            tools:text="This album's name" />

        <CheckBox
            android:foregroundGravity="center"
            android:id="@+id/options"
            android:layout_width="@dimen/minClickableSize"
            android:layout_height="@dimen/minClickableSize"
            android:layout_marginEnd="@dimen/smallDimen"
            android:button="@drawable/ic_options_selector"
            android:elevation="8dp"
            android:padding="@dimen/smallDimen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/minClickableSize"
            android:elevation="8dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/options"
            app:layout_constraintTop_toBottomOf="@id/options">

            <CheckBox
                android:foregroundGravity="center"
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_download_selector"
                android:padding="@dimen/mediumDimen"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/options" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>