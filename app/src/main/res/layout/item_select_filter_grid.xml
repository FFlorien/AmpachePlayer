<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="be.florien.anyflow.view.player.filter.selection.SelectFilterFragmentVM.FilterItem" />

        <variable
            name="vm"
            type="be.florien.anyflow.view.player.filter.selection.SelectFilterFragmentVM" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/listItemPadding">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:layout_marginBottom="@dimen/listItemPadding"
            android:contentDescription="@null"
            android:visibility="@{item.artUrl != null ? View.VISIBLE : View.GONE}"
            app:coverImageUrl="@{item.artUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:text="@{item.displayName}"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <CheckBox
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_options_selector"
            android:padding="@dimen/smallDimen"
            app:layout_constraintBottom_toTopOf="@+id/optionsContainer"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="parent">

            <CheckBox
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mediumDimen"
                android:button="@drawable/ic_download_selector"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/options" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
